{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="login-form col-lg-8 mx-auto p-2">
    <header>
        <img src="{{ asset('assets_app/images/dc_logo.svg') }}" alt="Download center app logo">
    </header>
    <form class="p-2" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">{{ 'auth.pleasesignin'|trans }}</h1>
        <label for="username">{{ 'fields.username'|trans }}</label>
        <input type="text" value="{{ last_username }}" name="username" id="username" class="form-control" autocomplete="username" required autofocus>
        <label for="password">{{ 'fields.password'|trans }}</label>
        <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> {{ 'fields.rememberme'|trans }}
                </label>
            </div>
        #}
        <br>
        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'fields.btn.login'|trans }}
        </button>
    </form>
    </div>
{% endblock %}
